@model Notes_MarketPlace.Models.ForgetPasswordModel

@{
    ViewBag.Title = "ForgetPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- important meta tags -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap/bootstrap.css">


    <!-- Title -->
    <title>MarketPlace Forgot Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Css file -->
    <link rel="stylesheet" href="~/Content/css/logins-type.css">

    <!-- Responsive File -->
    <link rel="stylesheet" href="~/Content/css/logins-type-responsive.css">



</head>
<body class="bg" style="background-image: url('@Url.Content("~/Userimages/pre-login/banner-with-overlay.jpg")');">
    <div class="container">
        <center>
            <div class="top-logo">
                <img src="~/Userimages/pre-login/top-logo.png" width="200" height="30">
            </div>
        </center>
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { }))
                    {
                        <form class="box" method="post" action=" ">
                            <center><h1 class="pg"> Forgot Password?  </h1></center>
                            <center><h3 class="subtitle"> Enter your email to reset your password </h3></center>

                            <div class="form-group">
                                @Html.LabelFor(x => x.EmailId, "Email", new { @class = "info1sign" })
                                @Html.TextBoxFor(x => x.EmailId, new { @id = "fpemail", @class = "form-control signuptextinput", @placeholder = "notesmarketplace77@gmail.com" })
                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger errormessage info1sign" })

                            </div>
                            <button type="submit" class="btn form-control" id="btnfp"><b>SUBMIT</b></button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>



    <!--Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
