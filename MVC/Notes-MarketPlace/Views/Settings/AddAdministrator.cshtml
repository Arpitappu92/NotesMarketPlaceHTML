@model Notes_MarketPlace.Models.AddAdministrator
@{
    ViewBag.Title = "AddAdministrator";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <title>Add Administrator</title>

    <link rel="stylesheet" href="~/Content/AdminCss/form.css">

    <link rel="stylesheet" href="~/Content/AdminCss/responsive.css">


</head>

<body>


    <section id="main">

        <div class="container" id="my-profile-box">


            <h2>Add Administrator</h2>
            @using (Html.BeginForm("AddAdministrator", "Settings", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label for="mp-firstname">First Name *</label>
                 
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "Enter FirstName of Admin" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger errormessage" })

                        </div>
                        <div class="form-group">
                            <label for="mp-lastname">Last Name *</label>
                              
                            
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Enter LastName of Admin" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger errormessage" })

                        </div>
                        <div class="form-group">
                            <label for="mp-email">Email *</label>
                                   
                            @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @placeholder = "Enter Email ID of Admin" })
                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger errormessage" })

                        </div>
                        <div class="form-group">
                            <label for="mp-pnumber mp-ccode">Phone Number</label><br>
                            @Html.DropDownList("PhoneCountryCode", new SelectList(ViewBag.PhoneNumberCountryCode, "CountryCode", "CountryCode"), new { @class = "form-control", name = "PhoneNumberCountryCode" })
                            @Html.ValidationMessageFor(model => model.PhoneCountryCode, "", new { @class = "text-danger errormessage" })


                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control phone-number-input", @placeholder = "Enter Phone Number" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger errormessage" })

                        </div>

                    </div>

                </div>

          
                <button class="submit-btn btn" type="submit">SUBMIT</button>

            }




        </div>

    </section>

    <script src="~/Scripts/AdminJs/bootstrap/popper.min.js"></script>

    <script src="~/Scripts/AdminJs/script.js"></script>


</body>

</html>