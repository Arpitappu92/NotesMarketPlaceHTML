                                @if (@items.NoteData.isPaid == true)
                                {
                            <td>Paid</td> }
                                            else
                                            {
                            <td>Free</td>}

                                @*<td>@Html.DisplayFor(modelItem => item .isPaid)</td>*@
                                <td>$@items.NoteData.SellPrice</td>
                                <td class="text-center"><i class="far fa-eye"></i>
                                
                                </td>

                            </tr>}
                                @*<tr>
                                    <td>09-10-2020, 10:10</td>
                                    <td>Software Engineer</td>
                                    <td>IT</td>
                                    <td>Free</td>
                                    <td>$0</td>
                                    <td class="text-center"><i class="far fa-eye"></i></td>
                                </tr>
                                <tr>
                                    <td>09-10-2020, 10:10</td>
                                    <td>Software Engineer</td>
                                    <td>IT</td>
                                    <td>Paid</td>
                                    <td>$500</td>
                                    <td class="text-center"><i class="far fa-eye"></i></td>
                                </tr>
                                <tr>
                                    <td>09-10-2020, 10:10</td>
                                    <td>Software Engineer</td>
                                    <td>IT</td>
                                    <td>Paid</td>
                                    <td>$200</td>
                                    <td class="text-center"><i class="far fa-eye"></i></td>
                                </tr>
                                <tr>
                                    <td>09-10-2020, 10:10</td>
                                    <td>Software Engineer</td>
                                    <td>IT</td>
                                    <td>Free</td>
                                    <td>$0</td>
                                    <td class="text-center"><i class="far fa-eye"></i></td>
                                </tr>*@
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <div class="row paging">
                <div class="col-md-12 text-center">
                    <div class="pagination ">
                       @* <a href="#" style="margin-right: 10px;"><i class="fa fa-angle-left"></i></a>*@
                        @* <a href="#" class="active">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>*@
                        @Html.PagedListPager(Published, notePublishedPage => Url.Action("Dashboard", new
                   {
                       notePublishedPage,
                       Search_Publish = Request.QueryString["Search_Publish"],
                       Sorting_Order_Publish = Request.QueryString["Sorting_Order_Publish"]


                   })
                      , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true }
                     )
