@model Notes_MarketPlace.Models.ContactUsModel
@{
    ViewBag.Title = "ContactUs";
}

<!DOCTYPE html>
<html lang="en">

<head>


    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, intial-scale=1">

    <title>Contact Us</title>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/Content/css/forms.css">

    <link rel="stylesheet" href="~/Content/css/responsive-forms.css">

</head>

<body>



    <section id="contact-us">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 banner-outer">
                    <div class="banner-box">
                        <img src="~/Userimages/assets/banner-with-overlay.jpg" alt="bg-overlay" class="image-responsive">
                        <h1 class="col-sm-6">Contact Us</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid" id="contactus-box">
            @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { }))
            {

                <form action="" method="post">


                    <h2>Get In Touch</h2>
                    <p>Let us know how to get back to you</p>

                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.FullName, "Full Name*", new { })
                                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @id = "fname", @type = "text", @placeholder = "Enter your full name", Required = "required" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.EmailId, "Email Address *", new { })
                                @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control", @id = "email2", @type = "text", @placeholder = "Enter your email address", Required = "required" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Subject, "Subject *", new { })
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @id = "subject", @type = "text", @placeholder = "Enter your subject", Required = "required" })
                            </div>

                        </div>

                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Question, "Comments/Questions *", new { })
                                @Html.TextAreaFor(x => x.Question, new { @class = "form-control", @id = "comments", @row = "10", @type = "text", @placeholder = "Comments...", Required = "required" })

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6">

                            <button class="submit-btn btn" type="submit">SUBMIT</button>

                        </div>
                    </div>

                </form>
            }
            </div>

    </section>
  
    <script src="~/Scripts/jquery.min.js"></script>

    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>

    <script src="~/Scripts/script.js"></script>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>